<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Principal</title>
    <link rel="stylesheet" href="/principal/css/principal.css"> 
</head>
<body>
    <h1>Bienvenido a Principal</h1>

    <h2>Agregar nueva canción</h2>
    <form action="/pagina/add-item" method="POST">
        <input type="text" name="songName" placeholder="Nombre de la canción" required>
        <input type="text" name="artistName" placeholder="Nombre del artista" required>
        <input type="text" name="coverUrl" placeholder="URL de la carátula" required>
        <button type="submit">Agregar</button>
    </form>

    <h2>Lista de canciones</h2>
    <div style="width: 100%; max-width: 400px;"> 
        <% items.forEach(item => { %>
            <div class="card">
                <h3><%= item.songName %></h3>
                <p>Artista: <%= item.artistName %></p>
                <img src="<%= item.coverUrl %>" alt="<%= item.songName %> Cover">
                <div class="button-container">
                    <form action="/pagina/delete-item/<%= item.id %>" method="POST">
                        <button type="submit">Eliminar</button>
                    </form>
                    <a href="/pagina/edit-item/<%= item.id %>">
                        <button type="button">Editar</button>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="nav-buttons">
        <a href="/">
            <button type="button">Inicio</button>
        </a>
        <a href="/auth/login">
            <button type="button">Atrás</button>
        </a>
    </div>

    <footer>
        &copy; 2024 Tu Aplicación de Música
    </footer>
</body>
</html>
